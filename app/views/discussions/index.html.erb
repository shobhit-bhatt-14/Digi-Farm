    <div id="dicussion-selector">
      <%= render partial: "discussions/discussions", locals: { discussions: @discussions } %>
    </div>
  </div>
  <div class="col-4"></div>
  <div class="border-start border-dark border-3 col-3 py-5 px-4 position-fixed" style="height: 100% !important; top: 0; right: 0;">
      <%= render "discussions/new" %>
  </div>
</div>
