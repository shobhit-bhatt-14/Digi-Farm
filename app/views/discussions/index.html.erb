<div class="col-3"></div>
<div class="col-9 d-flex justify-content-evenly">
  <div class="col-8 my-5 px-5">
    <div class="d-flex justify-content-between">
      <div class="fs-4 fw-bold">Discussions</div>
      <div class="col-5">
          <%= render "discussions/location" %>
      </div>
    </div>
