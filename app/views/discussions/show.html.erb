<div class="col-3"></div>
<div class="col-9 d-flex">
  <div class="col-8 my-5">
    <div class="text-start col-9 mx-auto">
      <div class="fs-4">❇️&emsp;<%= @discussion.content %></div>
      <p class="text-muted ps-2">
        &emsp;&emsp;&emsp;&mdash; by <%= get_user(@discussion.user_id).first_name %>
      </p>
    </div>
    <div class="d-flex justify-content-around fs-6">
      <span>Answers : <strong><%= @discussion.count %></strong></span>
      <%= button_to "Delete Discussion", discussion_path(@discussion), { method: :delete, class: "btn btn-danger btn-sm" } %>
    </div>
    <br>
    <hr class="pt-1">
    <%= render "answers/answers" %>
    <br>
    <%= render "answers/form" %>
  </div>
  <div class="col-4"></div>
  <div class="border-start border-dark border-3 col-3 py-5 px-4 position-fixed" style="height: 100% !important; top: 0; right: 0" >
    <%= render "discussions/new" %>
  </div>
</div>
