<div class="col-12">
    <%= form_with model: @feed, html: { class: "d-flex justify-content-between align-items-end" } do |form| %>
        <div class="text-start">
            <%= form.label :user_id, class: "form-label ms-1" %><br>
            <%= form.select :user_id, options_for_select(@users.collect{ |u| [u.fname, u.id] }, 1), {}, { class: "form-select border-secondary" } %>
        </div>
        <br />
        <div class="text-start">
            <%= form.label :content, class: "form-label ms-1" %><br>
            <%= form.text_area :content, rows: 1, cols: 50, class: "form-control border-secondary", placeholder: "Type here  ..." %>
        </div>
        <br />
        <div>
            <%= form.submit "Submit", class: "btn btn-primary fw-bold" %>
        </div>
    <% end %>
</div>